{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HLedger",
	"patterns": [
		{
			"include": "#accountnames"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#currencies"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"dates": {
			"patterns": [{
				"name": "constant.numeric.date",
				"match": "\\d{4}/\\d{2}/\\d{2}"
			}]
		},
		"accountnames": {
			"patterns": [{
				"name": "constant.other.account",
				"match": "\\b(Assets|Liabilities|Expenses|Income|Equity):[\\w:]+\\b"
			}]
		},
		"currencies": {
			"patterns": [{
				"name": "constant.other.currency",
				"match": "\\b(USD|AUD|NZD)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.semicolon",
				"match": ";.*"
			}]
		}
	},
	"scopeName": "source.hledger"
}
