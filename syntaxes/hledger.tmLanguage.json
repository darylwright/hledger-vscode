{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HLedger",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#dates"
		}
	],
	"repository": {
		"dates": {
			"patterns": [{
				"name": "constant.numeric.date",
				"match": "\\d{4}/\\d{2}/\\d{2}"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.hledger",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.hledger",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hledger",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.hledger"
}
