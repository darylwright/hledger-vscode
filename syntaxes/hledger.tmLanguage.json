{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HLedger",
	"patterns": [
		{
			"include": "#accountnames"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#currencies"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"dates": {
			"patterns": [
				{
					"name": "constant.numeric.date",
					"match": "^(\\d{4}[-/.])?\\d{1,2}[-/.]\\d{1,2}"
				}
			]
		},
		"accountnames": {
			"patterns": [
				{
					"name": "constant.other.account",
					"match": "\\b([Aa]ssets|[Ll]iabilities|[Ee]xpenses|[Ii]ncome|[Ee]quity):[\\w:]+\\b"
				}
			]
		},
		"currencies": {
			"patterns": [
				{
					"name": "constant.other.currency",
					"match": "\\b(AED|AUD|CAD|CHF|EUR|GBP|MXN|NZD|THB|USD)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.semicolon",
					"begin": ";",
					"end": "$",
					"patterns": [
						{
							"name": "constant.other.tag",
							"match": "\\w+:[^,]*"
						}
					]
				},
				{
					"name": "comment.line.number-sign",
					"match": "#.*"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.include",
					"match": "^include\\b"
				},
				{
					"name": "keyword.other.commodity",
					"match": "^commodity\\b"
				},
				{
					"name": "keyword.other.defaultcommodity",
					"match": "^D\\b"
				},
				{
					"name": "keyword.other.defaultyear",
					"match": "^Y\\d{4}\\b"
				},
				{
					"name": "keyword.other.applyaccount",
					"match": "^apply account\\b"
				},
				{
					"name": "keyword.other.endapplyaccount",
					"match": "^end apply account"
				},
				{
					"name": "keyword.other.account",
					"match": "^account\\b"
				},
				{
					"name": "keyword.other.accountalias",
					"match": "^alias\\b"
				},
				{
					"name": "keyword.other.endaccountaliases",
					"match": "^end aliases"
				}
			]
		}
	},
	"scopeName": "source.hledger"
}
