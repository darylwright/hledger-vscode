{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HLedger",
	"patterns": [
		{
			"include": "#accountnames"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#currencies"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#includes"
		}
	],
	"repository": {
		"dates": {
			"patterns": [
				{
					"name": "constant.numeric.date",
					"match": "\\d{4}/\\d{1,2}/\\d{1,2}"
				}
			]
		},
		"accountnames": {
			"patterns": [
				{
					"name": "constant.other.account",
					"match": "\\b([Aa]ssets|[Ll]iabilities|[Ee]xpenses|[Ii]ncome|[Ee]quity):[\\w:]+\\b"
				}
			]
		},
		"currencies": {
			"patterns": [
				{
					"name": "constant.other.currency",
					"match": "\\b(USD|AUD|NZD)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.semicolon",
					"match": ";.*"
				},
				{
					"name": "comment.line.number-sign",
					"match": "#.*"
				}
			]
		},
		"includes": {
			"patterns": [
				{
					"name": "keyword.other.include",
					"match": "include\\b"
				}
			]
		}
	},
	"scopeName": "source.hledger"
}
