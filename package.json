{
  "repository": {
    "type": "git",
    "url": "https://github.com/mhansen/hledger-vscode.git"
  },
  "name": "hledger-vscode",
  "displayName": "hledger-vscode",
  "description": "Language support for HLedger accounting journals.",
  "version": "0.0.2",
  "publisher": "mark-hansen",
  "engines": {
    "vscode": "^1.14.0"
  },
  "scripts": {
    "test": "mocha -r ts-node/register tests/test.ts"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "HLedger",
          "hledger"
        ],
        "extensions": [
          ".hledger",
          ".journal",
          ".journal.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/minimist": "^1.2.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^14.14.16",
    "@types/oniguruma": "^7.0.1",
    "minimist": "^1.2.5",
    "mocha": "^3.5.3",
    "oniguruma": "^7.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "vscode-textmate": "^5.2.0"
  }
}
